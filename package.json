{
	"name": "svelte-droplet",
	"version": "1.0.0",
	"description": "File dropzone for Svelte",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-package && vite build",
		"build:package": "svelte-package",
		"build:site": "vite build",
		"preview": "vite preview",
		"lint": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json && eslint src && prettier --check src",
		"format": "prettier --write src *.js && eslint --fix src *.js"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^2.0.3",
		"@sveltejs/kit": "^1.24.1",
		"@sveltejs/package": "^2.2.3",
		"@typescript-eslint/eslint-plugin": "^6.6.0",
		"@typescript-eslint/parser": "^6.6.0",
		"eslint": "^8.49.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.0.3",
		"prettier-plugin-svelte": "^2.0.3",
		"sass": "^1.66.1",
		"svelte": "^3.59.2",
		"svelte-check": "^3.5.1",
		"typescript": "^5.2.2",
		"vite": "^4.4.9"
	},
	"peerDependencies": {
		"svelte": "^3.0.0 || ^4.0.0"
	},
	"license": "MIT",
	"homepage": "https://svelte-droplet.kasper.space",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/probablykasper/svelte-droplet.git"
	},
	"bugs": {
		"url": "https://github.com/probablykasper/svelte-droplet/issues"
	},
	"author": {
		"name": "Kasper Henningsen",
		"url": "https://kasper.space"
	},
	"keywords": [
		"svelte",
		"file",
		"filedrop",
		"drag",
		"drop",
		"dropzone",
		"upload",
		"input",
		"component"
	],
	"prettier": {
		"useTabs": true,
		"printWidth": 100,
		"semi": false,
		"singleQuote": true,
		"plugins": [
			"prettier-plugin-svelte"
		]
	},
	"exports": {
		"./package.json": "./package.json",
		"./FileDrop.svelte": {
			"types": "./dist/FileDrop.svelte.d.ts",
			"svelte": "./dist/FileDrop.svelte",
			"default": "./dist/FileDrop.svelte"
		},
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"package"
	],
	"svelte": "./dist/index.js",
	"typesVersions": {
		">4.0": {
			"FileDrop.svelte": [
				"./dist/FileDrop.svelte.d.ts"
			],
			"index.d.ts": [
				"./dist/index.d.ts"
			]
		}
	}
}
