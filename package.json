{
	"name": "svelte-droplet",
	"version": "1.0.0",
	"description": "File dropzone for Svelte",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"lint": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json && eslint src && prettier --check src",
		"format": "prettier --write src *.js && eslint --fix src *.js"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^3.0.0",
		"@sveltejs/kit": "^2.0.3",
		"@sveltejs/package": "^2.2.3",
		"@sveltejs/vite-plugin-svelte": "^3.0.1",
		"@typescript-eslint/eslint-plugin": "^6.15.0",
		"@typescript-eslint/parser": "^6.15.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"publint": "^0.2.6",
		"sass": "^1.69.5",
		"svelte": "^4.2.8",
		"svelte-check": "^3.6.2",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"vite": "^5.0.10"
	},
	"peerDependencies": {
		"svelte": "^3.0.0 || ^4.0.0"
	},
	"license": "MIT",
	"homepage": "https://svelte-droplet.kasper.space",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/probablykasper/svelte-droplet.git"
	},
	"bugs": {
		"url": "https://github.com/probablykasper/svelte-droplet/issues"
	},
	"author": {
		"name": "Kasper Henningsen",
		"url": "https://kasper.space"
	},
	"keywords": [
		"svelte",
		"file",
		"filedrop",
		"drag",
		"drop",
		"dropzone",
		"upload",
		"input",
		"component"
	],
	"prettier": {
		"useTabs": true,
		"printWidth": 100,
		"semi": false,
		"singleQuote": true,
		"plugins": [
			"prettier-plugin-svelte"
		]
	},
	"exports": {
		"./package.json": "./package.json",
		"./FileDrop.svelte": {
			"types": "./dist/FileDrop.svelte.d.ts",
			"svelte": "./dist/FileDrop.svelte",
			"default": "./dist/FileDrop.svelte"
		},
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"svelte": "./dist/index.js",
	"typesVersions": {
		">4.0": {
			"FileDrop.svelte": [
				"./dist/FileDrop.svelte.d.ts"
			],
			"index.d.ts": [
				"./dist/index.d.ts"
			]
		}
	}
}
